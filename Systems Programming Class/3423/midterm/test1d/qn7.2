#!/usr/bin/perl -w

$fileout = $ARGV[2];

$file1 = $ARGV[0];
$file2 = $ARGV[1];

open(FO, "> $fileout") or die;

open(F1, $file1) or die;
open(F2, $file2) or die;

@a = <F1>;
@b = <F2>;

if ($#a >= $#b){
	$max = $#a;
}
if($#a < $#b){
	$max = $#b;
}

$x =0;
while($x <= $max){
	if(exists $a[$x]){
		print FO $a[$x];
	}
	if(exists $b[$x]){
		print FO $b[$x];
	}

	$x++;
}
